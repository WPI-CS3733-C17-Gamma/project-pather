<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.control.Tab?>
<?import javafx.scene.control.TabPane?>
<?import javafx.scene.control.ToggleButton?>
<?import javafx.scene.control.ToggleGroup?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Pane?>
<?import javafx.scene.layout.Region?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<BorderPane stylesheets="@design.css" xmlns="http://javafx.com/javafx/8.0.111" xmlns:fx="http://javafx.com/fxml/1">
   <top>
      <HBox alignment="CENTER" spacing="5.0" BorderPane.alignment="CENTER">
         <children>
            <ComboBox fx:id="searchBar" editable="true" maxWidth="Infinity" promptText="Search!" styleClass="search" />
             <Button alignment="CENTER" cancelButton="true" mnemonicParsing="false" onAction="#exitSearch" style="-fx-background-color: none;" styleClass="exitButton" text="X" />
            <Region HBox.hgrow="ALWAYS" />
              <ImageView fitHeight="57.0" fitWidth="374.0" pickOnBounds="true" preserveRatio="true">
                 <image>
                    <Image url="@BWFH_logo_rgb%20(1).png" />
                 </image>
              </ImageView>
            <Region HBox.hgrow="ALWAYS" />
              <Button mnemonicParsing="false" onAction="#help" onKeyPressed="#help" prefHeight="50.0" prefWidth="50.0" style="-fx-background-color: none;" styleClass="helpButton" />
             <Button mnemonicParsing="false" onAction="#logIn" prefHeight="50.0" prefWidth="50.0" style="-fx-background-color: none;" styleClass="adminMenuButton" />
         </children>
      </HBox>
   </top>
   <bottom>
        <HBox fx:id="multiMapDisplayMenu" alignment="CENTER" spacing="30.0" styleClass="resultMenu" BorderPane.alignment="CENTER">
         <padding>
            <Insets left="30.0" />
         </padding>
      </HBox>
   </bottom>
   <right>
      <TabPane fx:id="sidebar" side="BOTTOM" styleClass="hiddenTabs" BorderPane.alignment="CENTER">
         <tabs>
            <Tab>
               <content>
                  <TabPane styleClass="floorButtons" tabClosingPolicy="UNAVAILABLE">
                    <tabs>
                        <Tab text="Main">
                           <content>
                              <HBox alignment="TOP_CENTER" styleClass="floorButtons">
                                 <children>
                                     <ToggleButton fx:id="floor1" mnemonicParsing="false" text="1">
                                       <toggleGroup>
                                          <ToggleGroup fx:id="floorPicker" />
                                       </toggleGroup>
      							   </ToggleButton>
                                    <ToggleButton fx:id="floor2" mnemonicParsing="false" text="2" toggleGroup="$floorPicker" />
                                    <ToggleButton fx:id="floor3" mnemonicParsing="false" selected="true" text="3" toggleGroup="$floorPicker" />
                                    <ToggleButton fx:id="floor4" mnemonicParsing="false" text="4" toggleGroup="$floorPicker" />
                                    <ToggleButton fx:id="floor5" mnemonicParsing="false" text="5" toggleGroup="$floorPicker" />
                                    <ToggleButton fx:id="floor6" mnemonicParsing="false" text="6" toggleGroup="$floorPicker" />
                                    <ToggleButton fx:id="floor7" mnemonicParsing="false" text="7" toggleGroup="$floorPicker" />
                                 </children>
                              </HBox>
                           </content>
                        </Tab>
                      <Tab text="Belkin">
                        <content>
                              <HBox alignment="TOP_CENTER" styleClass="floorButtons">
                                 <children>
                                    <ToggleButton fx:id="belkin1" mnemonicParsing="false" text="1" toggleGroup="$floorPicker" />
                                    <ToggleButton fx:id="belkin2" mnemonicParsing="false" text="2" toggleGroup="$floorPicker" />
                                    <ToggleButton fx:id="belkin3" mnemonicParsing="false" text="3" toggleGroup="$floorPicker" />
                                    <ToggleButton fx:id="belkin4" mnemonicParsing="false" text="4" toggleGroup="$floorPicker" />
                                 </children>
                              </HBox>
                        </content>
                      </Tab>
                      <Tab text="Campus">
                           <content>
                              <HBox alignment="TOP_CENTER" styleClass="floorButtons">
                                 <children>
                                    <ToggleButton fx:id="campus" alignment="TOP_RIGHT" mnemonicParsing="false" text="Campus" toggleGroup="$floorPicker" />
                                 </children>
                              </HBox>
                           </content>
                      </Tab>
                    </tabs>
                  </TabPane>
               </content>
            </Tab>
            <Tab>
               <content>
                  <VBox alignment="TOP_CENTER">
                    <children>
					        <ListView fx:id="textDirectionsListView" styleClass="textDirection" />
                     </children>
                  </VBox>
               </content>
            </Tab>
         </tabs>
      </TabPane>
   </right>
   <center>
      <StackPane BorderPane.alignment="CENTER">
         <children>
            <Pane fx:id="imagePane">
               <children>
                    <ImageView fx:id="imageView" preserveRatio="true" />
               </children>
            </Pane>
              <Label fx:id="helpLabel" contentDisplay="CENTER" onKeyPressed="#help" onMouseClicked="#help" styleClass="helpBox" textAlignment="CENTER" visible="false">
                 <font>
                    <Font size="30.0" />
                 </font>
              </Label>
         </children>
      </StackPane>
   </center>
</BorderPane>
