<AnchorPane style="-fx-background-color: #d4e3ed;" xmlns="http://javafx.com/javafx/8.0.111" xmlns:fx="http://javafx.com/fxml/1" fx:controller="app.display.AdminToolsController">
   <children>
      <ToggleButton fx:id="togglebuttonAddUser" focusTraversable="false" layoutX="338.0" layoutY="67.0" mnemonicParsing="false" onMouseClicked="#togglebuttonPressedAdd" prefHeight="42.0" prefWidth="175.0" text="Add New User" />
      <ToggleButton fx:id="togglebuttonChangePassword" focusTraversable="false" layoutX="88.0" layoutY="67.0" mnemonicParsing="false" onMouseClicked="#togglebuttonPressedChange" prefHeight="42.0" prefWidth="175.0" text="Change Password" />
      <TextField fx:id="textfieldUsername" disable="true" layoutX="175.0" layoutY="129.0" onKeyReleased="#checkifFull" onMouseClicked="#hideLabel" prefHeight="30.0" prefWidth="250.0" promptText="Username" />
      <PasswordField fx:id="passwordfieldCurrent" disable="true" layoutX="175.0" layoutY="185.0" onKeyReleased="#checkifFull" onMouseClicked="#hideLabel" prefHeight="30.0" prefWidth="250.0" promptText="Current Password" />
      <PasswordField fx:id="passwordfieldNew" disable="true" layoutX="175.0" layoutY="243.0" onKeyReleased="#checkifFull" onMouseClicked="#hideLabel" prefHeight="30.0" prefWidth="250.0" promptText="New Password" />
      <PasswordField fx:id="passwordfieldNewAgain" disable="true" layoutX="175.0" layoutY="304.0" onKeyReleased="#checkifFull" onMouseClicked="#hideLabel" prefHeight="30.0" prefWidth="250.0" promptText="Retype New Password" />
      <Label fx:id="labelErrors" layoutX="175.0" layoutY="343.0" prefHeight="30.0" prefWidth="250.0" text="Wrong Password" textFill="#f20000" visible="false">
         <font>
            <Font name="System Bold" size="12.0" />
         </font>
      </Label>
      <Label layoutX="175.0" layoutY="14.0" prefHeight="42.0" prefWidth="250.0" text="Login Tools">
         <font>
            <Font name="Bank Gothic Medium BT" size="36.0" />
         </font>
      </Label>
      <Button fx:id="buttonSave" disable="true" focusTraversable="false" layoutX="425.0" layoutY="334.0" mnemonicParsing="false" onMouseClicked="#submit" prefHeight="42.0" prefWidth="145.0" text="Submit" />
   </children>
</AnchorPane>
