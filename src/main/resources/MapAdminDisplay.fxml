<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.*?>
<BorderPane onKeyPressed="#handleKey" style="-fx-background-color: #d4e3ed;" xmlns="http://javafx.com/javafx/8.0.111" xmlns:fx="http://javafx.com/fxml/1" fx:controller="app.display.MapAdminController">
    <top>
        <GridPane hgap="5.0" vgap="5.0" BorderPane.alignment="TOP_CENTER">
            <children>
                <ToggleButton fx:id="togglebuttonAddNode" maxWidth="Infinity" onAction="#handleToggleTools" text="Add _Node" GridPane.rowIndex="1">
                    <toggleGroup>
                        <ToggleGroup fx:id="toggleTools" />
                    </toggleGroup>
                </ToggleButton>
                <ToggleButton fx:id="togglebuttonAddConnections" maxWidth="Infinity" onAction="#handleToggleTools" text="Add _Connections" toggleGroup="$toggleTools" GridPane.columnIndex="1" GridPane.rowIndex="1" />
                <ToggleButton fx:id="togglebuttonChainAdd" maxWidth="Infinity" onAction="#handleToggleTools" text="Chain _Add" toggleGroup="$toggleTools" GridPane.columnIndex="2" GridPane.rowIndex="1" />
                <ComboBox fx:id="roomName" editable="true" maxWidth="Infinity" onMouseClicked="#isFocused" promptText="room name" GridPane.columnIndex="4" GridPane.rowIndex="2" />
                <Button maxWidth="Infinity" mnemonicParsing="false" onAction="#addRoom" text="Add or Change Room" GridPane.columnIndex="4" GridPane.rowIndex="1" />
                <Button maxWidth="Infinity" mnemonicParsing="false" onAction="#deleteConnection" text="Delete Connection" GridPane.columnIndex="1" GridPane.rowIndex="2" />
                <Button maxWidth="Infinity" mnemonicParsing="false" onAction="#deleteSelected" text="Delete Node" GridPane.rowIndex="2" />
                <Button maxWidth="Infinity" mnemonicParsing="false" onAction="#deleteElevator" text="Delete Elevator" GridPane.columnIndex="3" GridPane.rowIndex="2" />
                <ComboBox fx:id="floorSelector" maxWidth="Infinity" GridPane.columnIndex="2" GridPane.rowIndex="2" />
                <Button fx:id="defaultKioskButton" disable="true" mnemonicParsing="false" onAction="#setDefaultKiosk" text="Set as Kiosk" GridPane.columnIndex="5" GridPane.rowIndex="2" />
                <ChoiceBox fx:id="chooseAlgorithm" GridPane.columnIndex="5" GridPane.rowIndex="1" />
                <HBox GridPane.columnIndex="3" GridPane.rowIndex="1">
                    <children>
                        <ToggleButton fx:id="togglebuttonAddElevator" maxWidth="Infinity" onAction="#handleToggleTools" text="Add _Elevator" toggleGroup="$toggleTools" />
                        <MenuButton fx:id="elevatorSelector" maxWidth="Infinity" />
                    </children>
                </HBox>
            </children>
        </GridPane>
    </top>
    <center>
        <Pane fx:id="mapPane" minHeight="100.0">
            <children>
                <ImageView fx:id="imageviewMap" onContextMenuRequested="#showContextMenu" onMouseDragged="#handleDragEvent" onMousePressed="#isPressed" onMouseReleased="#isReleased" pickOnBounds="true" preserveRatio="true" />
            </children>
            <BorderPane.margin>
                <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
            </BorderPane.margin>
        </Pane>
    </center>
    <bottom>
        <ToolBar prefHeight="40.0" prefWidth="200.0">
            <items>
                <Button mnemonicParsing="false" onAction="#undo" text="Undo" />
                <Button mnemonicParsing="false" onAction="#preview" text="Preview" />
                <Button mnemonicParsing="false" text="Help" />
                <Button fx:id="buttonDone" mnemonicParsing="false" onAction="#done" onMouseClicked="#done" text="Save and Exit" />
            </items>
        </ToolBar>
    </bottom>
</BorderPane>
